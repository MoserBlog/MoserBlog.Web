@using Microsoft.Extensions.Options
@using MoserBlog.Web.Configurations
@using static MoserBlog.Web.Pages.Components.PageHeader.PageHeader

@inject IOptions<BlogMetaDataConfig> BlogMetaDataConfig

@model List<NavigationItem>

<header class="page-header">
    <div class="logo">
        <a href="/" class="logo__link">
            <h1 class="headline headline--h1">@BlogMetaDataConfig.Value.Name</h1>
        </a>
    </div>
        
    <nav class="navigation">
        <ul class="navigation__items">
            @foreach (var navigationItem in Model)
            {
                <li class="navigation__item @(navigationItem.IsActive ? "navigation__item--active" : "")">
                    <a href="@navigationItem.RouteUrl" class="navigation__item-link">@navigationItem.Title</a>
                </li>
            }
        </ul>
    </nav>
</header>