@using Microsoft.Extensions.Options
@using MoserBlog.Web.Configurations
@using System.Collections.ObjectModel
@using MoserBlog.Web.Services.Interfaces
@using static MoserBlog.Web.Pages.Components.PageHeader.PageHeader

@inject IMediaService MediaService

@model ReadOnlyCollection<NavItem>

<header class="page-header">
    <div class="logo">
        <a href="/" class="logo__link">
            <img class="logo__image" src="@MediaService.GetMediaUrl("moserblog-logo.svg")">
        </a>
    </div>
        
    <nav class="navigation">
        <ul class="navigation__items">
            @foreach (var navigationItem in Model)
            {
                <li class="navigation__item @(navigationItem.IsCurrent ? "navigation__item--active" : "")">
                    <a href="@navigationItem.RouteUrl" class="navigation__item-link">@navigationItem.Title</a>
                </li>
            }
        </ul>
    </nav>
</header>