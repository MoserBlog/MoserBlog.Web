@using Microsoft.Extensions.Options
@using MoserBlog.Web.Configurations

@inject IOptions<BlogMetaDataConfig> BlogMetaDataConfig

<header class="page-header">
    <div class="logo">
        <a href="/" class="logo__link">
            <h1 class="headline headline--h1">@BlogMetaDataConfig.Value.Name</h1>
        </a>
    </div>
        
    <nav class="navigation">
        <ul class="navigation__items">
            <li class="navigation__item navigation__item--active">
                <a href="/" class="navigation__item-link">Home</a>
            </li>

            <li class="navigation__item">
                <a class="navigation__item-link">Blog</a>
            </li>

            <li class="navigation__item">
                <a class="navigation__item-link">About</a>
            </li>
        </ul>
    </nav>
</header>